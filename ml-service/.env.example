# ML Service Configuration

# Service
SERVICE_NAME=ml-service
VERSION=1.0.0
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8001
API_PREFIX=/api/v1

# Model
MODEL_NAME=distilbert-base-multilingual-cased
MAX_LENGTH=512
BATCH_SIZE=16

# Classification
NUM_LABELS=2
CONFIDENCE_THRESHOLD=0.5

# Device (cpu or cuda)
DEVICE=cpu

# Preprocessing
LOWERCASE=true
REMOVE_SPECIAL_CHARS=false

# Logging
LOG_LEVEL=INFO
